{
    "Serilog": {
      "using": [ "Serilog.Sinks.Async", "Serilog.Sinks.Literate", "Serilog.Sinks.RollingFile", "Serilog.Filters.Expressions" ],
      "MinimumLevel": {
        "Default": "Information",
        "Override": {
          "Microsoft": "Warning",
          "System": "Warning"
        }
      },
      "WriteTo": [
        {
          "Name": "Logger",
          "Args": {
            "configureLogger": {
              "WriteTo": [
                {
                  "Name": "LiterateConsole",
                  "Args": {
                    "restrictedToMinimumLevel": "Information"
                  }
                },
                {
                  "Name": "Async",
                  "Args": {
                    "configure": [
                      {
                        "Name": "RollingFile",
                        "Args": {
                          "pathFormat": "../logs/math-client/log-{Date}.log",
                          "restrictedToMinimumLevel": "Information",
                          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {SourceContext} [{Level:u3}] {Message}{NewLine}{Exception}"
                        }
                      }
                    ]
                  }
                }
              ],
              "Filter": [
                {
                  "Name": "ByExcluding",
                  "Args": {
                     "expression": "EndsWith(@Properties['SourceContext'], 'AuditLogger')"
                  }
                }
              ]
            }
          }
        },
        {
          "Name": "Logger",
          "Args": {
            "configureLogger": {
              "WriteTo": [
                {
                  "Name": "Async",
                  "Args": {
                    "configure": [
                      {
                        "Name": "RollingFile",
                        "Args": {
                          "pathFormat": "../logs/math-client/cac_audit-{Date}.log",
                          "restrictedToMinimumLevel": "Information",
                          "outputTemplate": "{Timestamp:yyyy-MM-dd.HH:mm:ss.fff},  {Message}{NewLine}"
                        }
                      }
                    ]
                  }
                }
              ],
              "Filter": [
                {
                  "Name": "ByIncludingOnly",
                  "Args": {
                    "expression": "@Properties['SourceContext']='DotBPE.Protocol.Amp.CACAuditLogger'"
                  }
                }
              ]
            }
          }
        },
        {
          "Name": "Logger",
          "Args": {
            "configureLogger": {
              "WriteTo": [
                {
                  "Name": "Async",
                  "Args": {
                    "configure": [
                      {
                        "Name": "RollingFile",
                        "Args": {
                          "pathFormat": "../logs/math-client/request_audit-{Date}.log",
                          "restrictedToMinimumLevel": "Information",
                          "outputTemplate": "{Timestamp:yyyy-MM-dd.HH:mm:ss.fff},  {Message}{NewLine}"
                        }
                      }
                    ]
                  }
                }
              ],
              "Filter": [
                {
                  "Name": "ByIncludingOnly",
                  "Args": {
                    "expression": "@Properties['SourceContext']='DotBPE.Protocol.Amp.RequestAuditLogger'"
                  }
                }
              ]
            }
          }
        }
      ]
    }
  }
